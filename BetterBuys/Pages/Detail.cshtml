@page
@model DetailModel

<section>
    <div class="container-fluid product-detail">
        @if (Model.warningMsg != "")
        {
            <b class="alert-danger quantity-alert">@Model.warningMsg</b>
        }
        <div class="row product-detail-body">
            <div class="col-lg-6 col-sm-12 my-5">
                <img src="@Model.ProductDetail.ImageUri" class="product-detail-image" />
            </div>

            <div class="col-lg-6 col-sm-12 product-detail-body-text">
                <h4>@Model.ProductDetail.Name</h4>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-half"></i>
                <p>@Model.ProductDetail.Price.ToString("C")</p>

                <h6>About this item</h6>
                <ul>
                    @Html.Raw(Model.ProductDetail.Description)
                </ul>

                <form method="post">
                    <div class="product-detail-button">
                        <span>Quantity:</span>
                        <select class="form-control d-inline w-75 ml-2" input type="number" asp-for="@Model.ProductDetail.Quantity" name="quantity">
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option>@i</option>
                            }
                        </select>
                        <input class="btn btn-primary d-block my-3 px-5 w-100" type="submit" value="Add to Cart" />
                    </div>

                    <input type="hidden" asp-for="@Model.ProductDetail.Id" name="id">
                    <input type="hidden" asp-for="@Model.ProductDetail.Name" name="name">
                    <input type="hidden" asp-for="@Model.ProductDetail.Price" name="price">
                    <input type="hidden" asp-for="@Model.ProductDetail.ImageUri" name="pictureUri">
                </form>

                <div class="product-detail-body-link">
                    <a asp-page="index" class="product-detail-link">Continue Shopping</a>
                </div>
            </div>
        </div>

        <div class="row product-detail-ad">
            <div class="col-lg-12 my-5 ">
                <p>Advertisement</p>
            </div>
        </div>
    </div>

    <img />

    <h6></h6>
    <p></p>

</section>